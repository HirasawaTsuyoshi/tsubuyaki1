<div class="row">
  <div class="col-md-12">
    <h1>呟き編集</h1>
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label "地区" %>
        <%= f.collection_select(:category_id, Category.all, :id, :title, class: "form-control") %>

      </div>
      <div class="form-group">
        <%= f.label "本文" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
